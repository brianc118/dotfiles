    {
      "description": "command-shift-w to command-w in terminal to close window",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.alacritty$"
              ]
            }
          ],
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [
                "left_command",
                "shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
